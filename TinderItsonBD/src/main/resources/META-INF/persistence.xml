<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.2" xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd">
  <persistence-unit name="TinderItsonPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>com.mycompany.tinderitsonbd.entities.Estudiante</class>
    <class>com.mycompany.tinderitsonbd.entities.Hobbie</class>
    <class>com.mycompany.tinderitsonbd.entities.Mensaje</class>
    <class>com.mycompany.tinderitsonbd.entities.Like</class>
    <class>com.mycompany.tinderitsonbd.entities.EstudianteHobbie</class>
    <class>com.mycompany.tinderitsonbd.entities.Telefono</class>
    <class>com.mycompany.tinderitsonbd.entities.Correo</class>
    <class>com.mycompany.tinderitsonbd.entities.Match</class>
    <properties>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1:3306/TinderItson?useSSL=false&amp;serverTimezone=UTC"/>
      <!-- CREDENCIALES POR DEFECTO DE XAMPP -->
      <property name="jakarta.persistence.jdbc.user" value="root"/>
      <property name="jakarta.persistence.jdbc.password" value=""/>
      <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
